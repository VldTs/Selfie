<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.tsarcom.vs.uselfie" >

    <uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT"/>
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />
    <!-- Internet Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Permission to write to external storage -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:logo="@drawable/nemo">

        <activity
            android:name="ru.tsarcom.vs.uselfie.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.CREATE_SHORTCUT" />
                <category android:name="android.intent.category.DEFAULT" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ru.tsarcom.vs.uselfie.MineViewsActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="ru.tsarcom.vs.uselfie.OthersViewsActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="ru.tsarcom.vs.uselfie.CreateActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="ru.tsarcom.vs.uselfie.ViewActivity"
            android:label="@string/app_name" >
        </activity>

        <receiver
            android:name="ru.tsarcom.vs.uselfie.SelfieBroadReceiver"
            android:enabled="true" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <service
            android:name="ru.tsarcom.vs.uselfie.SelfieServiceF"
            android:enabled="true" >
        </service>
        <service
            android:name="ru.tsarcom.vs.uselfie.SelfieServiceUpVoite"
            android:enabled="true" >
        </service>

    </application>

</manifest>
