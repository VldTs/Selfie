<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="122dp"
            android:layout_height="122dp"

            android:layout_marginLeft="10dp">

            <ru.tsarcom.vs.uselfie.CircularImageViewBlue
                android:id="@+id/ivLeft"
                android:src="@drawable/abc_ic_clear_mtrl_alpha"


                android:layout_width="120dp"
                android:layout_height="120dp"

                android:layout_marginLeft="3dp"
            />

            <TextView
                android:id="@+id/tvVoiteLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="40"
                android:textSize="22dp"
                android:textStyle="bold"
                android:layout_gravity="right|top"
                android:background="@drawable/image_tv_blue"
                android:layout_marginTop="2dp"
                android:textColor="#ffffffff">
            </TextView>
        </FrameLayout>

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="center">
            <LinearLayout
                android:id="@+id/linearLayout0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">
            <TextView
                android:id="@+id/tvCid0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="# "
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="18dp">
            </TextView>
            <TextView
                android:id="@+id/tvCid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="15dp">
        </TextView>
            </LinearLayout>
            <TextView
                android:id="@+id/tvCdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="2014-11-25"
                android:textSize="9dp"></TextView>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/tvText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text=" VS. "
                    android:textSize="24dp"
                    android:textStyle="bold">
                </TextView>
            </LinearLayout>

            <ProgressBar
            android:id="@+id/pbLoad"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
                android:progressDrawable="@drawable/verticalprogressbar"
                android:max="5"
                android:progress="5"
                android:secondaryProgress="2"
                android:visibility="invisible">
        </ProgressBar>
        </LinearLayout>

        <FrameLayout
            android:layout_width="122dp"
            android:layout_height="122dp"
            android:layout_marginRight="10dp">

            <ru.tsarcom.vs.uselfie.CircularImageViewRed
                android:id="@+id/ivRight"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginLeft="3px"
                android:src="@drawable/abc_ic_clear_mtrl_alpha"
                />
            <TextView
                android:id="@+id/tvVoiteRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="97"
                android:textSize="22dp"
                android:textStyle="bold"
                android:layout_gravity="left|top"
                android:layout_marginTop="2dp"
                android:background="@drawable/image_tv_red"
                android:textColor="#ffffffff">
            </TextView>
        </FrameLayout>

    </LinearLayout>


</LinearLayout>