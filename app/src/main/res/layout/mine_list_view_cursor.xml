<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:id="@+id/flLVCBase"

        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="122dp"
            android:layout_height="122dp"

            android:layout_marginLeft="10dp">

            <ru.tsarcom.vs.uselfie.CircularImageViewBlue
                android:id="@+id/ivLeft"
                android:src="@drawable/abc_ic_clear_mtrl_alpha"


                android:layout_width="120dp"
                android:layout_height="120dp"

                android:layout_marginLeft="3dp"
            />

            <TextView
                android:id="@+id/tvVoiteLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="40"
                android:textSize="22dp"
                android:textStyle="bold"
                android:layout_gravity="right|top"
                android:background="@drawable/image_tv_blue"
                android:layout_marginTop="2dp"
                android:textColor="#ffffffff">
            </TextView>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/ivStartLeft"
                android:layout_gravity="left|top"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="center">
            <LinearLayout
                android:id="@+id/linearLayout0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="5px"
                    android:id="@+id/ivHashtag"
                    android:layout_gravity="center"
                    android:src="@drawable/hashtag_cl50_1" />
            <TextView
                android:id="@+id/tvCid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="15dp">
        </TextView>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/ivVS"
                    android:layout_gravity="center"
                    android:src="@drawable/vs_black"
                    android:visibility="visible" />
            </LinearLayout>
            <TextView
                android:id="@+id/tvCdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="2014-11-25"
                android:textSize="9dp"></TextView>
            <TextView
                android:id="@+id/tvCstatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text=""
                android:textSize="9dp"
                android:layout_marginTop="4dp"></TextView>

            <ProgressBar
            android:id="@+id/pbLoad"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
                android:progressDrawable="@drawable/verticalprogressbar"
                android:max="5"
                android:progress="5"
                android:secondaryProgress="2"
                android:visibility="gone">
        </ProgressBar>
        </LinearLayout>

        <FrameLayout
            android:layout_width="122dp"
            android:layout_height="122dp"
            android:layout_marginRight="10dp">

            <ru.tsarcom.vs.uselfie.CircularImageViewRed
                android:id="@+id/ivRight"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginLeft="3px"
                android:src="@drawable/abc_ic_clear_mtrl_alpha"
                />
            <TextView
                android:id="@+id/tvVoiteRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="97"
                android:textSize="22dp"
                android:textStyle="bold"
                android:layout_gravity="left|top"
                android:layout_marginTop="2dp"
                android:background="@drawable/image_tv_red"
                android:textColor="#ffffffff">
            </TextView>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/ivStartRight"
                android:layout_gravity="right|top"
                android:layout_marginRight="3dp"
                android:layout_marginTop="3dp" />
        </FrameLayout>

    </LinearLayout>


</LinearLayout>