<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp">




        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent">


                <Button
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="Л\nИ\nЧ\nН\nЫ\nЕ"
                    android:id="@+id/btnMine"
                    android:background="@drawable/button_background2"
                    android:gravity="center_horizontal|center_vertical"
                    android:textSize="18sp"
                    android:textStyle="bold|italic"
                    android:textColor="@color/text_color2"
                    android:padding="0dp"
                    android:layout_weight="1"
                    />


                <Button
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="Д\nР\nУ\nГ\nИ\nЕ"
                    android:id="@+id/btnOthers"
                    android:background="@drawable/button_background2"
                    android:gravity="center_horizontal|center_vertical"
                    android:textSize="18sp"
                    android:textStyle="bold|italic"
                    android:textColor="@color/text_color2"
                    android:padding="0dp"
                    android:layout_weight="1"
                    />
            </LinearLayout>


            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                android:layout_weight="1">

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_alignParentTop="false">

                            <ru.tsarcom.vs.uselfie.ZoomableImageView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:id="@+id/ivLeft"
                                android:layout_gravity="center"
                                android:layout_weight="1" />



                            <Button
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text="НРАВИТЬСЯ"
                                android:id="@+id/btnVoiteLeft"
                                android:background="@drawable/button_background_blue"
                                android:gravity="center_horizontal|center_vertical"
                                android:textSize="24sp"
                                android:textStyle="bold|italic"
                                android:textColor="@color/text_color2"
                                android:padding="0dp"
                                android:layout_gravity="center_horizontal|bottom"
                                android:layout_marginLeft="30dp"
                                android:layout_marginRight="30dp"
                                android:layout_marginTop="3dp"
                                android:layout_marginBottom="3dp"
                                />
                        </LinearLayout>

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="-"
                            android:id="@+id/tvVoiteLeft"
                            android:gravity="center_horizontal|center_vertical"
                            android:textSize="30dp"
                            android:layout_weight="1"
                            android:layout_alignParentRight="false"
                            android:layout_alignParentEnd="false"
                            android:layout_alignParentTop="true"
                            android:layout_alignWithParentIfMissing="false"
                            android:layout_alignParentBottom="false"
                            android:layout_alignParentLeft="false"
                            android:layout_alignParentStart="false"
                            android:layout_centerHorizontal="true" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent">

                            <ru.tsarcom.vs.uselfie.ZoomableImageView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:id="@+id/ivRight"
                                android:layout_gravity="center"
                                android:layout_weight="1" />

                            <Button
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text="НРАВИТЬСЯ"
                                android:id="@+id/btnVoiteRight"
                                android:background="@drawable/button_background_red"
                                android:gravity="center_horizontal|center_vertical"
                                android:textSize="24sp"
                                android:textStyle="bold|italic"
                                android:textColor="@color/text_color2"
                                android:padding="0dp"
                                android:layout_gravity="center_horizontal|bottom"
                                android:layout_marginLeft="30dp"
                                android:layout_marginRight="30dp"
                                android:layout_marginTop="3dp"
                                android:layout_marginBottom="3dp"
                                />

                        </LinearLayout>

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="-"
                            android:id="@+id/tvVoiteRight"
                            android:gravity="center_horizontal|center_vertical"
                            android:textSize="30dp"
                            android:layout_alignParentTop="true"
                            android:layout_centerInParent="true"
                            android:layout_alignParentRight="false"
                            android:layout_alignWithParentIfMissing="false"
                            android:layout_alignParentBottom="false"
                            android:layout_alignParentLeft="false" />

                    </RelativeLayout>

                </LinearLayout>


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent">


                <Button
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="С\nО\nЗ\nД\nА\nТ\nЬ"
                    android:id="@+id/btnCreate"
                    android:background="@drawable/button_background2"
                    android:gravity="center_horizontal|center_vertical"
                    android:textSize="18sp"
                    android:textStyle="bold|italic"
                    android:textColor="@color/text_color2"
                    android:padding="0dp"
                    android:layout_weight="1"
                    />
                <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="О\nП\nУ\nБ\nЛ\nИ\nК\nО\nВ\nА\nТ\nЬ"
                android:id="@+id/btnShare"
                android:background="@drawable/button_background2"
                android:gravity="center_horizontal|center_vertical"
                android:textSize="10sp"
                android:textStyle="bold|italic"
                android:textColor="@color/text_color2"
                android:padding="0dp"
                    android:layout_weight="1"
                />
            </LinearLayout>
        </LinearLayout>




</RelativeLayout>
